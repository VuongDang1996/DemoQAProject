# Jenkins Environment Configuration
# Copy this file to .env and customize for your environment

# Jenkins Server Configuration
JENKINS_URL=http://localhost:8080
JENKINS_USER=admin
JENKINS_TOKEN=your_jenkins_api_token_here

# Test Execution Configuration
DEFAULT_BROWSER=chrome
HEADLESS_MODE=true
TEST_TIMEOUT=300
MAX_RETRY_COUNT=2

# Reporting Configuration
REPORT_RETENTION_DAYS=30
SEND_EMAIL_NOTIFICATIONS=true
EMAIL_RECIPIENTS=dev-team@company.com

# Docker Configuration (if using containerized agents)
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=demoqa-jenkins-agent:latest

# GitHub Configuration
GITHUB_REPO_URL=https://github.com/VuongDang1996/DemoQAProject.git
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Chrome Configuration for Headless Mode
CHROME_ARGS=--headless,--no-sandbox,--disable-dev-shm-usage,--disable-gpu,--window-size=1920,1080

# Maven Configuration
MAVEN_OPTS=-Xmx1024m -XX:MaxPermSize=256m
MAVEN_PROFILES=jenkins

# Parallel Execution Settings
PARALLEL_TEST_COUNT=3
FORK_COUNT=1
REUSE_FORKS=false
